<!DOCTYPE html>
<html>
    <head>
        <div style="margin-top:30px;">
           <% if user_signed_in? %> 
               <span><%= current_user.name %>님 환영합니다.</span> 
            <% else %> 
                <span>로그인 해주세요 :)</span> 
            <% end %>
            
            <h1 style="font-family: 'Indie Flower', cursive; font-size:80px;">Photogram</h1>
        </div>
    </head>
    
    <body>
        <div class="container"> 
            <div class="row"> 
                <div class="col s12 m4"> 
                    <div class="card"> 
                        <div class="card-image"> 
                            <img src="http://materializecss.com/images/office.jpg" /> 
                        </div> 
                        <div class="card-content"> 
                            <% if user_signed_in? %> 
                                <div class="card-title"><%= current_user.name %></div> 
                                <p>이메일 : <%= current_user.email %></p> 
                                <p>올린 글 개수 : <%= @posts_count %></p> 
                            
                                <%= link_to new_post_path do %> 
                                    <button class="btn">글 쓰기</button> 
                                <% end %> 
                            <% else %> 
                                <span>로그아웃 상태</span>
                            <% end %>
                        </div> 
                    </div> 
                </div> 
            
                <div class="col s12 m8"> 
                    <% @posts.each do |post| %> 
                        <div class="card"> 
                            <div class="card-content"> 
                                <span class="card-title"><%= post.user.name %></span> 
                                <span><%= post.created_at %></span> 
                                <p><%= post.content %></p> 
                            </div> 
                            
                            <div class="card-action"> 
                                <a href="#">좋아요</a> 
                                <a href="#">댓글 달기</a> 
                            </div> 
                        </div> 
                    <% end %> 
                </div> 
            </div> 
        </div>

    </body>
</html>
